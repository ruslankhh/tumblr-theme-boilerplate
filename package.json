{
  "name": "tumblr-theme-boilerplate",
  "version": "1.0.0",
  "description": "The boilerplate for tumblr theme with webpack.",
  "scripts": {
    "lint": "eslint src/**/*.js",
    "test": "nyc mocha -r @babel/register src/**/*.test.js",
    "coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "release": "standard-version"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -e $GIT_PARAMS"
    }
  },
  "devDependencies": {
    "@babel/core": "^7.0.0-beta.49",
    "@babel/preset-env": "^7.0.0-beta.49",
    "@babel/register": "^7.0.0-beta.49",
    "@commitlint/cli": "^7.0.0",
    "@commitlint/config-conventional": "^7.0.1",
    "@commitlint/travis-cli": "^7.0.0",
    "babel-loader": "^8.0.0-beta.3",
    "chai": "^4.1.2",
    "codecov": "^3.0.2",
    "eslint": "^4.19.1",
    "eslint-config-standard": "^11.0.0",
    "eslint-plugin-import": "^2.12.0",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-promise": "^3.8.0",
    "eslint-plugin-standard": "^3.1.0",
    "husky": "^1.0.0-rc.8",
    "lint-staged": "^7.1.3",
    "memory-fs": "^0.4.1",
    "mocha": "^5.2.0",
    "nyc": "^12.0.2",
    "standard-version": "^4.4.0",
    "tumblr-theme-loader": "^1.0.0",
    "webpack": "^4.12.0",
    "webpack-dev-server": "^3.1.4"
  },
  "keywords": [
    "tumblr",
    "tumblr-theme",
    "boilerplate"
  ],
  "author": "Ruslan Khusnetdinov <ruslankhh@gmail.com>",
  "repository": "https://github.com/ruslankhh/tumblr-theme-boilerplate.git",
  "bugs": "https://github.com/ruslankhh/tumblr-theme-boilerplate/issues",
  "homepage": "https://github.com/ruslankhh/tumblr-theme-boilerplate#readme",
  "license": "MIT"
}
